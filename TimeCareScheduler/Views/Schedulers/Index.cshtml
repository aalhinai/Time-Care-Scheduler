@model IEnumerable<TimeCareScheduler.Models.Scheduler>

@{
    ViewBag.Title = "Index";
}

<h2>Agenda</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Event Name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            @Html.ActionLink("Back to Full List", "Index")

        </p>
    </div>



</form>

<p>
    @Html.ActionLink("Add New ", "Create")
</p>


<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @using (Html.BeginForm(new { id = item.Id })){ @Html.AntiForgeryToken()
                        <div>
                             @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                             @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                             @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                             <input type="submit" value="Done" class="btn btn-default" />
                       </div>
                    }

                </td>
            </tr>
        }

       
    </table>
   
    </div>
<input type="button" id="btnPrint" value="Print this page" />

@section scripts
{
    <script>
        $(function() {
            $("#btnPrint").click(function() {
                window.print();
            });
        });
    </script>
}
